@model IEnumerable<Subject>

<div class="container ">
	<div class="row pt-4 pb-4 justify-content-center">
		<div class="col-4">
			<h2 class="text-dark">Danh sách lớp học</h2>
		</div>
		<div class="col-4 text-end">
			<a asp-controller="Home" asp-action="Index" class="btn btn-dark w-25">Trở về</a>
		</div>
	</div>
	<table class="table table-bordered table-striped m-auto" style="width: 70%">
		<thead>
			<tr>
				<th style="width: 20%">Id</th>
				<th style="width: 30%"> Lớp học</th>
				<th style="width: 30%">Số tiết học</th>
				<th style="width: 20%"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.SubjectId</td>
					<td>@obj.SubjectName</td>
					<td>@obj.NumberOfPeriod</td>
					<td class="text-center">
						<a asp-controller="Classroom" asp-action="Detail" asp-route-id="@obj.SubjectId" class="btn btn-info mx-3 w-75">
							 <i class="bi bi-box-arrow-in-up-right"></i> Chi tiết
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>