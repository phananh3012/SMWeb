@model IEnumerable<Student>

<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h2 class="text-dark">Danh sách sinh viên</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Student" asp-action="Create" class="btn btn-dark w-25"><i class="bi bi-plus-circle"></i> Tạo</a>
			<a asp-controller="Home" asp-action="Index" class="btn btn-dark w-25">Trở về</a>
		</div>
	</div>
	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Họ và tên</th>
				<th>Giới tính</th>
				<th>Ngày sinh</th>
				<th>Lớp</th>
				<th>Khóa</th>

			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model)
			{
				<tr>
					<td>@obj.StudentId</td>
					<td>@obj.StudentName</td>
					<td>@(obj.Gender == 1?"Nam":"Nữ")</td>
					<td>@obj.DOB.ToString("dd/MM/yyyy")</td>
					<td>@obj.Class</td>
					<td>@obj.Course</td>
					<td>
						<div class="text-center">
							<a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.StudentId" class="btn btn-dark mx-2 w-25">
								<i class="bi bi-pencil"></i> Sửa
							</a>
							<a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.StudentId" class="btn btn-dark mx-2 w-25">
								<i class="bi bi-trash3"></i> Xóa
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
